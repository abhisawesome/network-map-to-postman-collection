{
    "manifest_version": 2,
    "name": "Network Logger to Postman",
    "version": "1.6",
    "description": "Logs API calls and exports them as Postman collections",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "<all_urls>",
      "storage",
      "downloads"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "apilogger@example.com"
      }
    }
  }